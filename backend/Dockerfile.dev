# Backend Development Dockerfile
# Optimized for development with hot reload

FROM node:20-alpine

WORKDIR /usr/src/app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy application code
COPY . .

# Set environment to development
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Use nodemon for hot reload
CMD ["npm", "run", "dev"]
